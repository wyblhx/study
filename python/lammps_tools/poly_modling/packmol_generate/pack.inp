tolerance 0.5

tolerance 0.5 #要求原子间距离不能小于多少

output pack.pdb  #输出文件名

filetype pdb #输出文件的格式，默认为pdb

#聚合物模型的构建
structure single.pdb
	number 30 #生成数量
	inside box 0.0 0.0 0.0 100.0 100.0 100.0 #xlo ylo zlo xhi yhi zhi
end structure

#纳米颗粒填充
structure nano.pdb
	number 30 #生成数量
	radius 0.5 #设置纳米颗粒半径
	inside box 0.0 0.0 0.0 100.0 100.0 100.0 #xlo ylo zlo xhi yhi zhi
end structure





